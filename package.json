{
  "name": "axum-react",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "setup": "git submodule update --init --recursive",
    "submodule:status": "git submodule status",
    "generate:types": "turbo run generate:types",
    "backend:dev": "turbo run dev --filter=backend",
    "backend:build": "turbo run cargo:build --filter=backend",
    "backend:test": "turbo run cargo:test --filter=backend",
    "contracts:build": "turbo run forge:build --filter=contracts",
    "contracts:test": "turbo run forge:test --filter=contracts",
    "frontend:dev": "turbo run dev --filter=frontend"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
